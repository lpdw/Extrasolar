{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bodie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bodie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bodie.name }}</td>
            </tr>
            <tr>
                <th>Ra</th>
                <td>{{ bodie.ra }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ bodie.distance }}</td>
            </tr>
            <tr>
                <th>Masse</th>
                <td>{{ bodie.masse }}</td>
            </tr>
            <tr>
                <th>Radius</th>
                <td>{{ bodie.radius }}</td>
            </tr>
            <tr>
                <th>Density</th>
                <td>{{ bodie.density }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ bodie.age }}</td>
            </tr>
            <tr>
                <th>Seff</th>
                <td>{{ bodie.seff }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ bodie.temperature }}</td>
            </tr>
            <tr>
                <th>Molecules</th>
                <td>{{ bodie.molecules }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ bodie.updateat }}</td>
            </tr>
            <tr>
                <th>Discovery</th>
                <td>{% if bodie.discovery %}{{ bodie.discovery|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Detection</th>
                <td>{{ bodie.detection }}</td>
            </tr>
            <tr>
                <th>Decl</th>
                <td>{{ bodie.decl }}</td>
            </tr>
            <tr>
                <th>Metallicity</th>
                <td>{{ bodie.metallicity }}</td>
            </tr>
            <tr>
                <th>Spectral_type</th>
                <td>{{ bodie.spectraltype }}</td>
            </tr>
            <tr>
                <th>Vari</th>
                <td>{{ bodie.vari }}</td>
            </tr>
            <tr>
                <th>Axis</th>
                <td>{{ bodie.axis }}</td>
            </tr>
            <tr>
                <th>Period</th>
                <td>{{ bodie.period }}</td>
            </tr>
            <tr>
                <th>Excentricity</th>
                <td>{{ bodie.excentricity }}</td>
            </tr>
            <tr>
                <th>Inclinaison</th>
                <td>{{ bodie.inclinaison }}</td>
            </tr>
            <tr>
                <th>Omega</th>
                <td>{{ bodie.omega }}</td>
            </tr>
            <tr>
                <th>Tref</th>
                <td>{{ bodie.tref }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('catalogue_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('catalogue_edit', { 'id': bodie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
