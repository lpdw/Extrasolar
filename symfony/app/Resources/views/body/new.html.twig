{% extends 'base.html.twig' %}



{% block body %}

{{ parent() }}
<h1>Bodie creation</h1>
<div class="col-lg-4 col-lg-offset-1">
    {{ form_start(form) }}
        {{ form_row(form.type_id) }}

        {{ form_row(form.name) }}
        {{ form_row(form.detection) }}
        {{ form_row(form.discovery) }}

        <br>Position
        {{ form_row(form.ra) }}
        {{ form_row(form.decl) }}
        {{ form_row(form.distance) }} {{ form_row(form.parsecs) }}

        <br>Caractéristiques physiques
        {{ form_row(form.radius) }} {{ form_row(form.Rt) }}
        {{ form_row(form.masse) }} {{ form_row(form.Mt) }}
        {{ form_row(form.density) }}<div id="calculDensity">Calculer</div>
        {{ form_row(form.molecules) }}
        {{ form_row(form.age) }}
        {{ form_row(form.metallicity) }}
        {{ form_row(form.temperature) }}
        {{ form_row(form.spectral_type) }}
        {{ form_row(form.vari) }}

        <br>Caractéristiques orbitales
        <div class="form-group" id="host_name_div" style="display">
          <label class="control-label" for="host_name">host name</label>
          <input type="text" id="host_name" name="host_name" class="form-control">
        </div>
        {{ form_row(form.rotation_id, { 'attr': { 'readonly': 'true' } }) }}
        {{ form_row(form.axis) }} {{ form_row(form.UA) }}
        {{ form_row(form.period) }} {{ form_row(form.jours) }}
        {{ form_row(form.excentricity) }}
        {{ form_row(form.inclinaison) }}
        {{ form_row(form.omega) }}
        {{ form_row(form.tref) }}
        {{ form_row(form.seff) }}<div id="calculSeff">Calculer</div>
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('catalogue_index') }}">Back to the list</a>
        </li>
    </ul>
</div>
<link href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" rel="Stylesheet"></link>
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="{{ asset('js/javascript.js') }}"></script>
{% endblock %}
