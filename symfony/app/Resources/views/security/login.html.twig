{% extends 'base.html.twig' %}


{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{{ parent() }}

<form action="{{ path('login') }}" method="post" class="mBottom30">
    <div class="text-center">
        <input class="w500 displayBlock margin0-auto mTop30" type="text" id="username" name="_username" value="{{ last_username }}" />

        <input class="w500 displayBlock margin0-auto mTop30" type="password" id="password" name="_password" />

        <button class="buttonLink mTop30" type="submit">Se connecter</button>
    </div>

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

</form>


{% endblock %}
