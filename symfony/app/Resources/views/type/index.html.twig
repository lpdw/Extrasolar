{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-table.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-table.js') }}"></script>
    <script src="{{ asset('extensions/toolbar/bootstrap-table-toolbar.js') }}"></script>
    <script src="{{ asset('js/javascript.js') }}"></script>
{% endblock %}

{% block body %}

    {{ parent() }}

<div class="container">
    {% if app.user %}
        <div class="text-right">
            <a class="buttonLink mTop30" href="{{ path('type_new') }}">Ajouter un type</a>
        </div>
    {% endif %}
    <table id="table"
    data-toggle="table"
    data-pagination="true"
    data-search="true"
    data-advanced-search="true"
    data-id-table="advancedTable"
    data-show-columns="true"
    data-expanded="true">
    <thead>
        <tr>
            <th class="text-center" data-field="name" data-sortable="true">ID</th>
            <th data-field="categorie" data-sortable="true">Nom</th>
            <th data-field="Spectral_type" data-sortable="true">Cat√©gorie</th>
            <th data-field="Masse" data-sortable="true">Description</th>
            <th data-field="Radius" data-sortable="true">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for type in types %}
    <tr>
        <td class="titleBootstrap"><a href="{{ path('type_show', { 'id': type.id }) }}">{{ type.id }}</a></td>
        <td class="titleBootstrap"><span class="posTdBootstrap">{{ type.name }}</span></td>
        <td class="titleBootstrap"><span class="posTdBootstrap">{{ type.categorie }}</span></td>
        <td class="titleBootstrap"><span class="posTdBootstrap">{{ type.description }}</span></td>
        <td class="titleBootstrap">
            {% if app.user %}
                <a class="posTdBootstrap" href="{{ path('type_edit', { 'id': type.id }) }}">Modifier</a>
            {% endif %}
        </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
</div>

{% endblock %}
